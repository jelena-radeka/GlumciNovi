<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/ivMalaSlika1"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_alignTop="@id/tvIme"
            android:layout_alignBottom="@id/rbMaleOcene"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="50dp"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/ivMalaSlika"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/tvIme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ivMalaSlika1"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Ime" />

        <TextView
            android:id="@+id/tvPrezime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvIme"
            android:layout_toRightOf="@id/ivMalaSlika1"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Prezime" />

        <RatingBar
            android:id="@+id/rbMaleOcene"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_below="@id/tvPrezime"
            android:layout_toRightOf="@id/ivMalaSlika1"
            android:layout_marginLeft="10dp"
            android:numStars="5" />



    </RelativeLayout>


</androidx.cardview.widget.CardView>