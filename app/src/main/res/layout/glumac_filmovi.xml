<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvNaziv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Batman Begins" />

        <TextView
            android:id="@+id/tvGodina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tvNaziv"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/tvNaziv"
            android:layout_alignTop="@id/tvNaziv"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:text="(2015)"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tvNaziv" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>